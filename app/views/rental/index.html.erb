

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<%= paginate @products %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Image</th>
    <th>Thumbnail</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>

        <td><%= link_to product.proper_name, rental_show_path(product) %></td>
        <td><%= product.price %></td>
        <td><%= truncate(product.description.html_safe, :length=>20 )%></td>

        <td><%= product.quantity %></td>
        <td><%= image_tag product.image %></td>
        <td><%= link_to (image_tag( product.thumbnail) ), rental_show_path(product) %></td>
        <td><%= link_to 'Show', rental_show_path(product.id) %></td>


      </tr>
  <% end %>
  </tbody>
</table>

